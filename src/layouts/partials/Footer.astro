---
import { Picture } from "@astrojs/image/components";
import { Image } from "@astrojs/image/components";
import Logo from "@components/Logo.astro";
import Social from "@components/Social.astro";
import config from "@config/config.json";
import menu from "@config/menu.json";
import social from "@config/social.json";

import stindia from "public/images/st-india.png";
import thub from "public/images/thub.png";
import mfstartup from "public/images/Microsoft-for-Startups.webp";

import { markdownify } from "@lib/utils/textConverter";
// import Image from "astro/components/Image.astro";
const { footer } = menu;
const { copyright, location, email, phone, footer_description } = config.params;
---

<footer class="footer bg-[#F1F1F1]">
  <div class="container">
    <div class="gx-5 row pb-10 pt-[52px]">
      <div class="col-12 mt-12 md:col-6 lg:col-3">
        <br />
        <Logo />
        <br />
        <!-- <p class="mt-6">
          {footer_description}
        </p> -->

        <!-- <div class="row"><Logo /></div>
         -->
        <div class="grid grid-cols-1 gap-2 md:grid-cols-2 lg:grid-cols-3">
          <!-- <Picture src={}></Picture> -->
          <Image
            src={stindia}
            alt="Startup India"
            width={120}
            height={80} 
            
            
            loading="eager"
            format="avif"
          />
          <Image
            src={mfstartup}
            alt="Microsoft for Startups"
            width={120}
            height={80} 
            
            
            loading="eager"
            format="avif"
          />
          <Image
            src={thub}
            alt="T"
            width={90}
            height={60} 
            
            
            loading="eager"
            format="avif"
          />
          <!-- Image tag did not work so changes it to Picture -->
          <!-- <Image
            class="mx-auto"
            src="images/st-india.png"
            width={100}
            height={60}
            alt=""
          />

          <Image
            class="mx-auto"
            src="images/Microsoft-for-Startups.webp"
            width={100}
            height={60}
            alt=""
          />
          <Image
            class="mx-auto"
            src="images/thub.png"
            width={100}
            height={60}
            alt=""
          /> -->
        </div>
      </div>
      <div class="col-12 mt-12 md:col-6 lg:col-3">
        <h6>Socials</h6>

        <Social source={social} className="social-icons mt-4 lg:mt-6" />
      </div>
      <div class="col-12 mt-12 md:col-6 lg:col-3">
        <h6>Quick Links</h6>
        <ul>
          {
            footer.map((item, i) => (
              <li class={footer.length - 1 === i ? "mb-0" : "mb-4"}>
                <a class="hover:text-primary hover:underline " href={item.url}>
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="col-12 mt-12 md:col-6 lg:col-3">
        <h6>Location & Contact</h6>
        <ul>
          <li class="mb-2">{location}</li>
          <li class="mb-2">
            <a class="mb-2 hover:text-primary" href={`mailto:${email}`}
              >{email}</a
            >
          </li>
          <li>
            <a class="hover:text-primary hover:underline" href={`tel:${phone}`}
              >{phone}</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container max-w-[1440px]">
    <div
      class="footer-copyright mx-auto border-t border-border pb-10 pt-7 text-center"
    >
      <!-- <p class="content text-text" set:html={markdownify(copyright)} /> -->
    </div>
  </div>
</footer>
